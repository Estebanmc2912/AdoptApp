<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.adoptapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ActivityTipoRegistro" />
        <activity android:name=".ActivityRegistrarAnimal" />
        <activity android:name=".ActivityRegistrarFundacion" />
        <activity android:name=".ActivityRegistrarPersona" />
        <activity android:name=".ActivityPerfilAnimal" />
        <activity
            android:name=".ActivityFiltro"
            android:windowSoftInputMode="stateHidden" />


        <activity android:name=".views.ActivityRegistrarEvento"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".views.ActivityVerHistorias"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.ActivityFormalizarAdopcion"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.ActivityPerfilPersona"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.ActivityRecogerAdoptado"
            android:parentActivityName=".views.ActivityMenuAdoptante"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityDetalleSolicitud"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityVerSolicitudesInstitucion"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityHacerSolicitud"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.ActivityDetalleReporte"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityBuscarReporte"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityReporteRapido"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.ActivityPerfilInstitucion"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityBuscarInstituciones"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityPerfilAnimal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityFiltro"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.ActivityRegistrarAnimal"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.ActivityMenuKeeper"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityBuscarAnimales"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityMenuAdoptante"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityInicioPersona"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityLogin"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>